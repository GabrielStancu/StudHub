            <Image Source="/Img_source/info_icon.png" Height="30" Width="30" HorizontalAlignment="Right" Margin="0,360,15,0"/>
        </Grid>
        <Grid Grid.Column="4" Height="420" Width="300" Margin="0,200,0,200">
            <Border Background="#FFFFFF" CornerRadius="5" BorderThickness="10" BorderBrush="DarkGray"/>
            <TextBlock Text="12 months" FontSize="40" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" Margin="0,20,0,350"/>
            <Separator Margin="25,80,25,330"/>
            <TextBlock Name ="T12" Text="6.95$" FontSize="70" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" Margin="0,120,0,200"/>
